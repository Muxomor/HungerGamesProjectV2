<Application x:Class="HungerGamesProjectV2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HungerGamesProjectV2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="CornButton" TargetType="Button">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property ="CornerRadius" Value="7">
                    </Setter>
                </Style>
            </Style.Resources>
            <Setter Property="Foreground" Value="OrangeRed"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#19DDDDDD"></Setter>
            <Setter Property="Foreground" Value="#FFB2B2B2"></Setter>
            <Setter Property="BorderBrush" Value="#FF650405"></Setter>
        </Style>
    </Application.Resources>
</Application>
