<Page x:Class="HungerGamesProjectV2.Pages.CreateVote"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HungerGamesProjectV2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateVote">

    <Grid Background="#171717">
        <StackPanel HorizontalAlignment="Left" Margin="50 0 0 0" VerticalAlignment="Center">
            <TextBlock Foreground="#FFB2B2B2">Event:</TextBlock>
            <ComboBox Margin="0 0 0 15" Width="200" Name="EventNameCB" DisplayMemberPath="event_title" Height="25"></ComboBox>
            <TextBlock Foreground="#FFB2B2B2">Vote Header:</TextBlock>
            <TextBox Margin="0 0 0 15" Name="TitleTb" Height="25"></TextBox>
            <TextBlock Foreground="#FFB2B2B2">Player1:</TextBlock>
            <ComboBox Margin="0 0 0 15" Name="player1CB" Height="25"></ComboBox>
            <TextBlock Foreground="#FFB2B2B2">Player2:</TextBlock>
            <ComboBox Margin="0 0 0 5" Name="player2CB" Height="25"></ComboBox>
            <Button Width="100" HorizontalAlignment="Left" Margin="0 12 0 0" Name="CreateVoteBtn" Click="CreateVoteBtn_Click">Create</Button>
        </StackPanel>
    </Grid>
</Page>
