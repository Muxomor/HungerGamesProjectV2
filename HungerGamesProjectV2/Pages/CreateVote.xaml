<Page x:Class="HungerGamesProjectV2.Pages.CreateVote"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HungerGamesProjectV2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateVote">

    <Grid Background="#171717">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Event:</TextBlock>
            <ComboBox Name="EventNameCB" DisplayMemberPath="event_title"></ComboBox>
            <TextBlock>Vote Header:</TextBlock>
            <TextBox Name="TitleTb"></TextBox>
            <TextBlock>Player1:</TextBlock>
            <ComboBox  Name="player1CB"></ComboBox>
            <TextBlock>Player2:</TextBlock>
            <ComboBox Name="player2CB"></ComboBox>
            <Button Name="CreateVoteBtn" Click="CreateVoteBtn_Click">Create</Button>
        </StackPanel>
    </Grid>
</Page>
