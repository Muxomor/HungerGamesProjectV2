<Page x:Class="HungerGamesProject.Pages.RegistrationPage" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
      xmlns:local="clr-namespace:HungerGamesProject.Pages" 
      mc:Ignorable="d"  
      d:DesignHeight="450" d:DesignWidth="800" 
      Title="RegistrationPage">

    <Grid Background="#171717">
        <Image Source="/Assets/Mask group.png" Margin="340,154,-340,-154" />

        <StackPanel  HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="40 35 0 0">
            <TextBlock FontSize="20" Foreground="#FFB2B2B2" FontFamily="Impact">Для участия в игре зарегистрируйтесь в системе</TextBlock>
            <StackPanel Width="200" HorizontalAlignment="Left" Orientation="Vertical" Margin="0 40 0 0">
                <StackPanel Margin="0 5" HorizontalAlignment="Left" Orientation="Vertical">
                    <TextBlock Foreground="#FFB2B2B2">Логин:</TextBlock>
                    <TextBox Width="170" ToolTip="Придумайте себе уникальный логин для входа в систему." Name="LoginTB" Height="25"></TextBox>
                </StackPanel>
                <StackPanel Margin="0 5" HorizontalAlignment="Left" Orientation="Vertical">
                    <TextBlock Foreground="#FFB2B2B2">Пароль:</TextBlock>
                    <PasswordBox Width="170" Name="PasswordPB" Height="25"></PasswordBox>
                </StackPanel>
                <StackPanel Margin="0 5" HorizontalAlignment="Left" Orientation="Vertical">
                    <TextBlock Foreground="#FFB2B2B2">Повторите пароль:</TextBlock>
                    <PasswordBox Width="170" Name="ConfirmPassPB" Height="25"></PasswordBox>
                </StackPanel>
                <StackPanel Margin="0 5" HorizontalAlignment="Left" Orientation="Vertical">
                    <TextBlock Foreground="#FFB2B2B2">Выберите свою роль:</TextBlock>
                    <ComboBox Width="170" Height="25" x:Name="Rolecb" ToolTip="Кем вы будете на время игр">
                        <ComboBoxItem>Участник</ComboBoxItem>
                        <ComboBoxItem>Болельщик</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Margin="0 15 0 0">
                    <Button Margin="5" Width="120" Height="25" Click="Button_Click_1">Зарегистрироваться</Button>
                    <Button Margin="5" Width="120" Height="25" Click="Button_Click">Уже есть аккаунт</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>



