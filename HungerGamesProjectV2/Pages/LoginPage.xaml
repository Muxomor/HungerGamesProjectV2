<Page x:Class="HungerGamesProject.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HungerGamesProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="0  0 0 190 ">Добро пожаловать на Голодные Игры.</TextBlock>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            
            <StackPanel Margin="3" Orientation="Horizontal">
                <TextBlock>Login:</TextBlock>
                <TextBox  Width="70" Name="LoginTB"></TextBox>
            </StackPanel>
            <StackPanel Margin="3" Orientation="Horizontal">
                <TextBlock>Password:</TextBlock>
                <PasswordBox Width="70" Name="PasswordTB"></PasswordBox>
            </StackPanel>
            <StackPanel Margin="5">
                <Button Margin="2" Height="20" Name="LogBtn" Click="LogBtn_Click">Войти</Button>
                <Button Margin="2" Name="RegBtn" Click="RegBtn_Click">К регистрации</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
