<Page x:Class="HungerGamesProject.Pages.UsersMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HungerGamesProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UsersMainPage">

    <Grid Background="#171717">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="39*"/>
        </Grid.ColumnDefinitions>
        <Frame Grid.Column="1" Name="GameInfoFrame"></Frame>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock>Login:</TextBlock>
                    <TextBlock Name="loginTB"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock>Name:</TextBlock>
                    <TextBlock Name="NameTB"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock>Role:</TextBlock>
                    <TextBlock Name="RoleTB"></TextBlock>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Button Margin="0 4 0 0" Visibility="Visible">Button</Button>
                <Button Margin="0 4 0 0" Visibility="Visible" Click="Button_Click">Button</Button>
                <Button Margin="0 4 0 0" Visibility="Visible">Button</Button>
                <Button Margin="0 4 0 0" Visibility="Visible">Button</Button>
                <Button Margin="0 4 0 0" Visibility="Visible">Button</Button>
                <Button Name="VotingBtn" Margin="0 4 0 0" Visibility="Visible" Click="VotingBtn_Click">Голосования</Button>

            </StackPanel>
            <Button   Click="LogOutBtn_Click" Name="LogOutBtn" HorizontalAlignment="Left" VerticalAlignment="Bottom">LogOut</Button>
        </StackPanel>
    </Grid>
</Page>
